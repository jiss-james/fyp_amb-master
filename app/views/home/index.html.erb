<div class="container">
  <h2 style="text-align:center"><strong id="brand">BrandSpace</strong> We believe in a community,
  built by all of us.</h2>
  <br/>
</div>

<div id="quote"></div>

<div class="container">

  <br/>
  <% if !@activities.nil? %>
    <h3>Activities around <%= @location%></h3>
    <div class="row">
      <div class="card-deck">
        <% @activities.each do |activity| %>
          <div class="card text-center" style="width: 17rem;">
            <% if activity.image? %>
            <%= image_tag activity.image_url(:med), class:"card-img-top" %>
            <% end %>
            <div class="card-block">
              <h4 class="card-title">
                <%= activity.activity_name %>
              </h4>
              <p class="card-text">
                <%= activity.location %>
              </p>
            </div>
            <div class="card-footer">
              <%= link_to "Go to Activity", company_activity_path(activity.company_id, activity.id), class:"btn btn-outline-primary" %>
            </div>
          </div>
        <%end%>
      </div>
    </div>
    <br/>
    <% if @lotsofactivities == true %>
    <%= link_to 'More Activities', search_path(:q => @location, :category => "alocation"), class:"btn btn-outline-info" %>
    <%end%>
    <br/>
  <%end%>

  <br/>

  <% if !@companies.nil? %>
    <h3>Companies around <%= @location%></h3>
    <div class="row">
      <div class="card-deck">
        <% @companies.each do |company| %>
          <div class="card text-center" style="width: 17rem;">
            <% if company.image? %>
            <%= image_tag company.image_url(:med), class:"card-img-top" %>
            <% end %>
            <div class="card-block">
              <h4 class="card-title">
                <%= company.company_name %>
              </h4>
              <p class="card-text">
                <%= company.location %>
              </p>
            </div>
            <div class="card-footer">
              <%= link_to "Go to Company", company_path(company.id), class:"btn btn-outline-primary" %>
            </div>
        </div>
        <%end%>
      </div>
    </div>
  <%end%>

  <br/>

  <% if !@users.nil? %>
  <br/>
    <h3>Users around <%= @location%></h3>
    <div class="row">
      <div class="card-deck">
        <% @users.each do |user| %>
          <div class="card text-center" style="width: 17rem;">
            <% if user.image? %>
            <%= image_tag user.image_url(:med), class:"card-img-top" %>
            <% end %>
            <div class="card-block">
              <h4 class="card-title">
                <%= user.first_name %> <%= user.last_name %>
              </h4>
              <p class="card-text">
                <%= user.current_location %>
              </p>
            </div>
            <div class="card-footer">
              <%= link_to "Go to User", user_path(user.id), class:"btn btn-outline-primary" %>
            </div>
        </div>
        <%end%>
      </div>
    </div>
  <%end%>

</div>
