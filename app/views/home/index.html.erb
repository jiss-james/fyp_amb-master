<div class="container">
  <h3>All Activities around you..</p>
  <% @results.each do |result| %>
    <% if result.class.to_s == "Activity" %>
    <div class="card" style="width: 17rem;">
      <% if result.image? %>
      <%= image_tag result.image_url(:med), class:"card-img-top" %>
      <% end %>
      <div class="card-block">
        <h4 class="card-title">
          <%= result.activity_name %>
        </h4>
        <p class="card-text">
          <%= result.location %>
        </p>
        <%= link_to "Go to Activity", company_activity_path(result.company_id, result.id), class:"btn btn-outline-primary" %>
      </div>
    </div>
    <%end%>
  <% end %>

</div>
