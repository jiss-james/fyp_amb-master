<div class="container">

  <% if !@activities.nil? %>
    <h3>All Activities around <%= @location%>:</h3>
    <br/>
    <div class="row">
      <div class="card-deck">
        <% @activities.each do |activity| %>
          <div class="card text-center" style="width: 17rem;">
            <% if activity.image? %>
            <%= image_tag activity.image_url(:med), class:"card-img-top" %>
            <% end %>
            <div class="card-block">
              <h4 class="card-title">
                <%= activity.activity_name %>
              </h4>
              <p class="card-text">
                <%= activity.location %>
              </p>
            </div>
            <div class="card-footer">
              <%= link_to "Go to Activity", company_activity_path(activity.company_id, activity.id), class:"btn btn-outline-primary" %>
            </div>
          </div>
        <%end%>
      </div>
    </div>
    <br/>
  <%end%>

  <% if !@companies.nil? %>
    <h3>All Companies around <%= @location%>:</h3>
    <br/>
    <div class="row">
      <div class="card-deck">
        <% @companies.each do |company| %>
          <div class="card text-center" style="width: 17rem;">
            <% if company.image? %>
            <%= image_tag company.image_url(:med), class:"card-img-top" %>
            <% end %>
            <div class="card-block">
              <h4 class="card-title">
                <%= company.company_name %>
              </h4>
              <p class="card-text">
                <%= company.location %>
              </p>
            </div>
            <div class="card-footer">
              <%= link_to "Go to Company", company_path(company.id), class:"btn btn-outline-primary" %>
            </div>
        </div>
        <%end%>
      </div>
    </div>
  <%end%>





</div>
