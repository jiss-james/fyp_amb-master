      <%= f.label :description %>
      <%= f.text_area :description, class:"form-control", placeholder:"Organisation Description", rows:"10" %>
    </div>

    <div class="form-group">
      <%= f.label :location %>
      <%= f.text_field :location, class:"form-control" %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
