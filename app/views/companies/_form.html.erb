  <%= form_for(company, html: { multipart: :true}) do |f| %>
    <% if company.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

        <ul>
        <% company.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <div class="input-group mb-2 mr-sm-2 mb-sm-0">
        <div class="input-group-addon"><i class="fa fa-building-o" aria-hidden="true"></i></div>
        <%= f.text_field :company_name, class:"form-control", placeholder:"Organisation Name", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="input-group mb-2 mr-sm-2 mb-sm-0">
        <div class="input-group-addon"><i class="fa fa-file-text" aria-hidden="true"></i></div>
        <%= f.text_area :description, class:"form-control", placeholder:"Organisation Description", rows:"10" %>
      </div>
    </div>

  <div class="form-group">
    <i class="fa fa-picture-o" aria-hidden="true"></i>  <%= f.label :image %> -  
    <%= f.file_field :image %>
  </div>

    <div class="form-group">
      <div class="input-group mb-2 mr-sm-2 mb-sm-0">
        <div class="input-group-addon"><i class="fa fa-map-marker" aria-hidden="true"></i></div>
        <%= f.text_field :location, class:"form-control", placeholder:"Company Location" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit class:"btn btn-success btn-block" %>
    </div>
  <% end %>
