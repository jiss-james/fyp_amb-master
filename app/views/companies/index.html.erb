<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Your Organisation(s)</h1>
  <br/>

  <% if can? :create, Company %>
  <%= link_to 'New Company', new_company_path, class:"btn btn-secondary" %>
  <%end%>
  <br/>
  <br/>

  <div class="row">
  <% current_user.companies.each do |company| %>
  <div class="card" style="width: 17rem; height: 23rem;">
    <%= image_tag company.image_url(:med), class:"card-img-top" %>
    <div class="card-block">
      <h4 class="card-title"><%= company.company_name%></h4>
      <p class="card-text"><%= company.location%></p>
      <%= link_to 'Show', company, class: "btn btn-outline-primary" %>
    </div>
  </div>
  <% end %>
</div>

  <br>
</div>
