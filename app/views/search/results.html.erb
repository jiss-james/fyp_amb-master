<div class="container">
  <% @results.each do |result| %>
    <!-- <%= result.class %> -->
    <% if result.class.to_s == "Company" %>
      <div class="card card-block">
        <h4 class="card-title">
          <%= result.company_name %>
        </h4>
        <p class="card-text">
          <%= result.description %>
        </p>
        <%= link_to "Go to Company", company_path(result.id), class:"btn btn-primary" %>
      </div>
    <% elsif result.class.to_s == "Activity" %>
      <div class="card card-block">
        <h4 class="card-title">
          <%= result.activity_name %>
        </h4>
        <p class="card-text">
          <%= result.description %>
        </p>
        <%= link_to "Go to Activity", company_activity_path(result.company_id, result.id), class:"btn btn-primary" %>
      </div>
    <% elsif result.class.to_s == "User" %>
    <div class="card" style="width: 20rem;">
      <% if result.image? %>
      <%= image_tag result.image_url(:med), class:"card-img-top" %>
      <% end %>
      <div class="card-block">
        <h4 class="card-title"><%= result.first_name%> <%= result.last_name%></h4>
        <p class="card-text"><%= result.description%></p>
        <%= link_to "Go to User Profile", user_path(result.id), class:"btn btn-outline-primary" %>
      </div>
    </div>
    <% end %>
  <% end %>
  <!-- <%= @results.inspect %> -->
</div>
