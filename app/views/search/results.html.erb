<div class="container">
  <% @results.each do |result| %>
    <!-- <%= result.class %> -->
    <% if result.class.to_s == "Company" %>
      <div class="card card-block">
        <h4 class="card-title">
          <%= result.company_name %>
        </h4>
        <p class="card-text">
          <%= result.description %>
        </p>
        <%= link_to "Go to Company", company_path(result.id), class:"btn btn-primary" %>
      </div>
    <% elsif result.class.to_s == "Activity" %>
      <div class="card card-block">
        <h4 class="card-title">
          <%= result.activity_name %>
        </h4>
        <p class="card-text">
          <%= result.description %>
        </p>
        <%= link_to "Go to Activity", company_activity_path(result.company_id, result.id), class:"btn btn-primary" %>
      </div>
    <% elsif result.class.to_s == "User" %>
      <div class="card card-block">
        <h4 class="card-title">
          <%= result.first_name %>
        </h4>
        <p class="card-text">
          <%= result.description %>
        </p>
        <%= link_to "Go to User Profile", user_path(result.id), class:"btn btn-primary" %>
      </div>
    <% end %>
  <% end %>
  <!-- <%= @results.inspect %> -->
</div>
