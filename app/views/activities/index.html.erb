<p id="notice"><%= notice %></p>

<div class="container">

  <% if current_user.admin? %>
  <br/>
  <h1>All Activities</h1>
  <br/>

  <div class="row">
    <div class="card-deck">
    <% @activities.each do |activity| %>
      <div class="card text-center" style="width: 17rem;">
        <% if activity.image? %>
        <%= image_tag activity.image_url(:med), class:"card-img-top" %>
        <% end %>
        <div class="card-block">
          <h4 class="card-title">
            <%= activity.activity_name %>
          </h4>
          <p class="card-text">
            <%= activity.location %>
          </p>
        </div>
        <div class="card-footer">
          <%= link_to "Go to Activity", company_activity_path(activity.company.id, activity.id), class:"btn btn-outline-primary" %>
        </div>
      </div>
      <%end%>
    </div>
  </div>
  <%end%>

</div>
