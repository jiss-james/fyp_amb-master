<div class="container">

  <h1>All your conversations</h1>

  <div class="row">
    <div class="card-deck">
    <% current_user.conversations.each do |conversation| %>
    <% @user = User.find(conversation.user_id)
       @receiver = User.find(conversation.receiver_id) %>
      <div class="card text-center" style="width: 20rem;">
        <div class="card-block">
          <h4 class="card-title"><%= conversation.subject%></h4>
          <p class="card-text">Members: <%= @user.first_name %>, <%= @receiver.first_name %></p>
        </div>
        <div class="card-footer">
          <%= link_to 'Show', conversation, class: "btn btn-outline-warning" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>

</div>
