<script src="//maps.google.com/maps/api/js?key=AIzaSyBNjdwrpQ8D6O542G7gyNngdexq77DvVS8"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<div class="container">

  <div class="row">
    <div class="col-4">
      <%= image_tag(@user.image_url(:med)) if @user.image? %>

      <h1><%= @user.first_name %> <%= @user.last_name %></h1>

      <strong>Date of Birth:</strong> <%= @user.date_of_birth.strftime("%B %d, %Y") %>
      <br/>
      <% if @user.gender? %>
      <strong>Gender:</strong> <%= @user.gender.capitalize %>
      <br/>
      <br/>
      <%end%>
      <%= link_to 'Send a Message', new_conversation_path(:receiver_id => @user.id), class:"btn btn-outline-success" %>
      <% if can? :update, User %>
      <%= link_to 'Edit Profile', edit_user_registration_path, class:"btn btn-outline-primary" %>
      <%end%>

    </div>
    <div class="col-8">
      <strong>Profession:</strong> <%= @user.profession %>
      <br/>
      <br/>
      <strong>Description:</strong> <%= @user.description %>
      <br/>
      <br/>
      <strong>Work Experience:</strong> <%= @user.work_experience %>
      <br/>
      <br/>
      <% if @user.current_location? %>
      <strong>Address:</strong> <%= @user.current_location %>
      <br/>

      <div style='width: 800px;'>
        <div id="map" style='width: 650px; height: 400px;'>
          <script type="text/javascript">
            handler = Gmaps.build('Google');
            handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
            markers = handler.addMarkers(<%=raw @hash.to_json %>);
            handler.bounds.extendWith(markers);
            handler.fitMapToBounds();
            });
            google.maps.event.addDomListener(window, 'page:load', initialize);
          </script>
        </div>
      </div>

      <br/>
      <br/>
      <%end%>

    </div>


  </div>



</div>
